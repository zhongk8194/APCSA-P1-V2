import java.awt.Color;
import java.awt.Graphics;

public class Tile extends Block
{
   //instance variables
   private int speed;

   public Tile()
   {
	   super(10,10);
       speed =5;
   }

   //add the other Tile constructors
   public Tile(int x, int y){
	  super(x,y);
	  speed = 5;
			 
   }
   public Tile (int x, int y, int wid, int ht){
	   super (x,y,wid,ht);
	   speed=5;
   }
   public Tile(int x, int y, int spd){
		super (x,y);
		speed=spd;
	}
   public Tile(int x, int y, int wid, int ht,int spd){
		super (x,y, wid,ht);
		speed=spd;
	}
	public Tile(int x, int y, int wid, int ht, Color col, int spd){
		super(x,y,wid,ht,col);
		speed=spd;
	}
	
	public void draw(Graphics window)
	{
		draw(window);
	}


  /** public void moveUpAndDraw(Graphics window)
